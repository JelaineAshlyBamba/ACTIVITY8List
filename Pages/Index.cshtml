@page
@model ACTIVITY8List.Pages.IndexModel
@{
    ViewData["Title"] = "Person List";
}

<h1>Person List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Email Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model.People)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.Age</td>
                <td>@person.Gender</td>
                <td>@person.EmailAddress</td>
            </tr>
        }
    </tbody>
</table>
